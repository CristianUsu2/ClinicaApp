{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-restricted-exports": [
      "error",
      {
        "restrictedExports": [
          "exports",
          "require",
          "module",
          "__dirname",
          "__filename",
          "Buffer",
          "process"
        ],
        "allowUnsafeNewFunction": true
      }
    ],
    "ignore": [
      "node_modules/mysql/**/*.js"
    ]
  }
}
